{{ attach_library('gin_frontend/header') }}

<header class="site-header" id="header" role="banner">
  <div class="site-header__layout">

    {# --- Left: Logo / Branding --- #}
    <div class="site-header__logo">
      {% if logo %}
        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-logo">
          <img src="{{ logo }}" alt="{{ site_name|default('Home'|t) }}" />
        </a>
      {% elseif site_name %}
        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-name">
          {{ site_name }}
        </a>
      {% endif %}

      {% if site_slogan %}
        <span class="site-slogan">{{ site_slogan }}</span>
      {% endif %}
    </div>

    {# --- Center: Primary Navigation --- #}
    <div class="site-header__menu">
      {% if page.primary_menu %}
        <nav class="site-nav" role="navigation" aria-label="{{ 'Main navigation'|t }}">
          {{ page.primary_menu }}
        </nav>
      {% elseif page.navigation %}
        <nav class="site-nav" role="navigation" aria-label="{{ 'Main navigation'|t }}">
          {{ page.navigation }}
        </nav>
      {% endif %}
    </div>

    {# --- Right: Utility region (search/contact/etc.) --- #}
    <div class="site-header__icon">
      {% if page.secondary_menu %}
        <nav class="site-secondary-nav" aria-label="{{ 'Secondary navigation'|t }}">
          {{ page.secondary_menu }}
        </nav>
      {% endif %}

      {% if page.header %}
        <div class="header-region">
          {{ page.header }}
        </div>
      {% endif %}
    </div>

  </div>
</header>
