<header class="border-b border-slate-200 bg-white" role="banner" data-test-id="site-header">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-6 px-4 py-6 sm:px-6 lg:px-8">
    <div class="flex items-center gap-3">
      {% if logo %}
        <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="block">
          <img src="{{ logo }}" alt="{{ site_name|default('Home'|t) }}" class="h-10 w-auto" />
        </a>
      {% else %}
        <span class="text-lg font-semibold text-brand">{{ site_name }}</span>
      {% endif %}
    </div>

    {% if page.primary_menu %}
      <nav class="hidden items-center gap-8 text-sm font-medium text-slate-700 md:flex" aria-label="{{ 'Primary navigation'|t }}">
        {{ page.primary_menu }}
      </nav>
    {% endif %}

    <div class="flex items-center gap-3">
      {% if page.secondary_menu %}
        <nav class="hidden items-center gap-4 text-sm text-slate-500 lg:flex" aria-label="{{ 'Secondary navigation'|t }}">
          {{ page.secondary_menu }}
        </nav>
      {% endif %}
      <button class="btn md:hidden" type="button" aria-label="{{ 'Open navigation'|t }}">
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 7h16M4 12h16M4 17h16" />
        </svg>
      </button>
    </div>
  </div>
</header>
