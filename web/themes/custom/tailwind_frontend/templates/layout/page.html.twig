{# Attach Tailwind output #}
{{ attach_library('tailwind_frontend/global-styling') }}

<div class="flex min-h-screen flex-col bg-slate-50">

  {# Header #}
  {% include '@tailwind_frontend/parts/header.html.twig' ignore missing %}

  {# Hero region when blocks are placed #}
  {% if page.hero %}
    <section class="bg-white py-12 shadow-sm">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        {{ page.hero }}
      </div>
    </section>
  {% endif %}

  <main id="main-content" class="flex-1 py-12">
    <div class="mx-auto grid max-w-6xl gap-10 px-4 sm:px-6 lg:grid-cols-[1fr_minmax(0,_320px)] lg:px-8">
      <div class="prose max-w-none">
        {{ page.content }}
      </div>

      {% if page.sidebar %}
        <aside class="space-y-6 lg:sticky lg:top-24">
          {{ page.sidebar }}
        </aside>
      {% endif %}
    </div>
  </main>

  <footer class="border-t border-slate-200 bg-white py-8" data-test-id="site-footer">
    <div class="mx-auto flex max-w-6xl flex-col gap-2 px-4 text-sm text-slate-500 sm:flex-row sm:items-center sm:justify-between sm:px-6 lg:px-8">
      <p class="font-medium uppercase tracking-wide text-slate-600">more projects</p>
      <p class="text-slate-500">
        office@awsdesign.at | +43 699 19425831 | Hollandstra√üe 9 | 1020 Vienna | Austria Europe
      </p>
      {% if page.footer %}
        <div class="flex gap-4">
          {{ page.footer }}
        </div>
      {% endif %}
    </div>
  </footer>

</div>
