{
	"name": "tailwind-radix",
	"description": "A custom Radix subtheme prepared for Tailwind CSS utilities.",
	"private": true,
	"engines": {
		"npm": ">=6.0",
		"node": ">=16.0",
		"yarn": ">=1.6"
	},
	"license": "MIT",
	"scripts": {
		"postinstall": "find node_modules/ -name '*.info' -type f -delete",
		"dev": "mix && npm run tailwind",
		"watch": "npm-run-all --parallel watch:mix watch:tailwind",
		"watch:mix": "mix watch",
		"watch:tailwind": "tailwindcss -c tailwind.config.cjs -i ./src/css/tailwind.css -o ./build/css/tailwind.css --watch",
		"biome:format": "biome format --write src/ components/",
		"biome:lint": "biome lint --apply src/ components/",
		"biome:check": "biome check --apply src/ components/",
		"stylint": "npx stylelint '**/*.scss'",
		"stylint-fix": "npx stylelint '**/*.scss' --fix",
		"watch-poll": "mix watch -- --watch-options-poll=1000",
		"hot": "mix watch --hot",
		"production": "mix --production && npm run tailwind:build",
		"tailwind": "tailwindcss -c tailwind.config.cjs -i ./src/css/tailwind.css -o ./build/css/tailwind.css --minify",
		"tailwind:build": "tailwindcss -c tailwind.config.cjs -i ./src/css/tailwind.css -o ./build/css/tailwind.css --minify"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.4.1",
		"@popperjs/core": "^2.11.8",
		"autoprefixer": "^10.4.5",
		"bootstrap": "^5.3.3",
		"browser-sync": "^3.0.4",
		"browser-sync-webpack-plugin": "github:Va1/browser-sync-webpack-plugin",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.1",
		"drupal-radix-cli": "^1.0.6",
		"laravel-mix": "^6.0.18",
		"npm-run-all": "^4.1.5",
		"laravel-mix-copy-watched": "^2.3.1",
		"laravel-mix-stylelint": "^1.0.0",
		"postcss": "^8.4.49",
		"postcss-scss": "^4.0.2",
		"sass": "^1.63.6",
		"sass-loader": "^13.0.2",
		"tailwindcss": "^3.4.15",
		"stylelint": "^14.1.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-config-standard-scss": "^6.1.0",
		"stylelint-webpack-plugin": "^3.1.0"
	}
}
